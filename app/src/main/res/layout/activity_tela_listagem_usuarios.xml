<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaListagemUsuarios">

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/computador" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="43dp"
            android:paddingTop="16dp"
            android:text="Listagem de Usúarios"
            android:textSize="30dp"
            android:textStyle="bold"

            android:textColor="@color/black"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txtstatus"
        android:layout_below="@id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="right"/>

    <TextView
        android:id="@+id/testonome"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/txtnome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testonome" />
    <TextView
        android:id="@+id/testoendereco"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtnome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Endereço:"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/txtendereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testoendereco" />

    <TextView
        android:id="@+id/testotelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtendereco"
        android:layout_marginTop="10dp"
        android:text="Telefone:"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txttelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testotelefone" />

    <LinearLayout
        android:id="@+id/linear7"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txttelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btanterior"
            android:layout_below="@id/txtBemVindo"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Anterior"
            android:backgroundTint="@color/orangeB"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btproximo"
            android:layout_below="@id/btcadastrar_usuario"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/orangeB"
            android:textColor="@color/black"
            android:text="Próximo"/>
    </LinearLayout>
    <Button
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btfechar"
        android:layout_below="@id/linear7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/orangeB"
        android:textColor="@color/black"
        android:text="Fechar"/>



</RelativeLayout>